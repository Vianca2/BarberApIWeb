  "components": {
    "schemas": {
      "ActualizarEstadoCitaDto": {
        "required": [
          "estado"
        ],
        "type": "object",
        "properties": {
          "estado": {
            "minLength": 1,
            "type": "string"
          },
          "codigoConfirmacion": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CrearCitaDto": {
        "required": [
          "fechaHora",
          "tipoCorte"
        ],
        "type": "object",
        "properties": {
          "fechaHora": {
            "type": "string",
            "format": "date-time"
          },
          "tipoCorte": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "descripcion": {
            "maxLength": 1000,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RegistroUsuarioDto": {
        "required": [
          "email",
          "nombre",
          "password",
          "rol",
          "telefono"
        ],
        "type": "object",
        "properties": {
          "nombre": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "maxLength": 150,
            "minLength": 0,
            "type": "string",
            "format": "email"
          },
          "password": {
            "maxLength": 100,
            "minLength": 6,
            "type": "string"
          },
          "telefono": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "rol": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme. Enter 'Bearer' [space] and then your token.",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
